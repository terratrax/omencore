<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OmenCore.Avalonia.App"
             RequestedThemeVariant="Dark">
    
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    
    <Application.Resources>
        <!-- OMEN Brand Colors -->
        <Color x:Key="OmenBlue">#00BFFF</Color>
        <Color x:Key="OmenRed">#E31837</Color>
        <Color x:Key="OmenGreen">#39FF14</Color>
        <Color x:Key="OmenPurple">#9D4EDD</Color>
        <Color x:Key="OmenOrange">#FF6B35</Color>
        
        <!-- Background Colors -->
        <Color x:Key="DarkBackground">#0D0D0D</Color>
        <Color x:Key="CardBackground">#1A1A1A</Color>
        <Color x:Key="CardBackgroundHover">#252525</Color>
        
        <!-- Text Colors -->
        <Color x:Key="PrimaryText">#FFFFFF</Color>
        <Color x:Key="SecondaryText">#B0B0B0</Color>
        <Color x:Key="AccentText">#00BFFF</Color>
        
        <SolidColorBrush x:Key="OmenBlueBrush" Color="{StaticResource OmenBlue}" />
        <SolidColorBrush x:Key="OmenRedBrush" Color="{StaticResource OmenRed}" />
        <SolidColorBrush x:Key="OmenGreenBrush" Color="{StaticResource OmenGreen}" />
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}" />
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}" />
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryText}" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryText}" />
    </Application.Resources>
</Application>
